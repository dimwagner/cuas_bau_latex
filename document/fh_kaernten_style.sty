\providecommand{\keywordsDE}[1]{% Schlagwörter
	\small
	\textbf{\textit{Schlagwörter} ---} #1
	\normalsize}
\providecommand{\keywordsEN}[1]{% Keywords 
	\small
	\textbf{\textit{Keywords} ---} #1
	\normalsize}

\makeatletter
     \renewcommand*\l@figure{\@dottedtocline{1}{1em}{3.2em}}
	 \let\l@table\l@figure
