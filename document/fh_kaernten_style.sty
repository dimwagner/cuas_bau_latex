\DTLloaddb[noheader,keys={Norm,Beschreibung,Ausgabe}]{normen}{normen.csv}
\DTLsort*{Norm}{normen}
\noindent\footnotesize \setlength{\extrarowheight}{1ex}
\begin{tabular}{lp{\dimexpr \textwidth-\eqboxwidth{norm}-3em}}
	\DTLforeach{normen}{%
		\Norm=Norm,\Beschreibung=Beschreibung,\Ausgabe=Ausgabe}{%
		\eqmakebox[norm][l]{[\Norm]} & \Beschreibung \newline Ausgabe: \Ausgabe \\
	}
	\\
\end{tabular}
\clearpage
\ohead[]{\parbox[t][5mm]{\textwidth}{\raggedleft \rightmark}}}



